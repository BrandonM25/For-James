<div class="container my-5">
    <!-- Material form login -->
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <form method="post">
                <input type="hidden" name="action" value="signin">
                
                <div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
                    <label class="white-text">Email</label>
                    <input type="email" name="email" class="form-control" value="{{formData.email}}">
                </div>
                <div class="form-group {{#if validationErrors.password}}has-error{{/if}}">
                    <label class="white-text">Password</label>
                    <input type="password" name="password" class="form-control" value="{{formData.password}}">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Signin</button>
                </div>
            </form>
        </div>
    </div>
</div>