<!-- Material form register -->
<!-- Full Page Intro -->
<div class="view register-view" style="background-image: url('/images/thecross.jpeg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-stylish-strong d-flex justify-content-center align-items-center">
        <!-- Content -->
        <div class="container">
            <!--Grid row-->
            <div class="row pt-lg-5 mt-lg-5">
                <!--Grid column-->
                <div class="col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left wow fadeInLeft register-head"
                    data-wow-delay="0.3s">
                    <h1 class="display-4">Register</h1>
                    <hr class="hr-light">
                    <h6 class="mb-3">Register here for your free account! Without registering you will not be able to
                        shop in the store.</h6>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 col-xl-5 mb-4">
                    <!-- Material form register -->
                    <div class="card">

                        <h5 class="card-header red darken-4 white-text text-center py-4">
                            <strong>Sign up</strong>

                        </h5>

                        <!--Card content-->
                        <div class="card-body px-lg-5 pt-0">
                            {{#if userRegistered}}
                            <h3>You have successfully registered. Please log in.</h3>
                            {{else}}
                            <!-- Form -->
                            <form class="text-center" method="post" style="color: #757575;">
                                <input type="hidden" name="action" value="register">
                                <div class="form-row">
                                    <div class="col">
                                        <!-- First name -->
                                        <div class="md-form {{#if validationErrors.name}}has-error{{/if}}">
                                            <input type="text" id="materialRegisterFormFirstName" class="form-control"
                                                name="name.full" value="{{formData.[name.full]}}">
                                            <label for="materialRegisterFormFirstName">Full name</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- E-mail -->
                                <div class="md-form mt-0 {{#if validationErrors.email}}has-error{{/if}}">
                                    <input type="email" id="materialRegisterFormEmail" class="form-control" name="email"
                                        value="{{formData.email}}">
                                    <label for="materialRegisterFormEmail">E-mail</label>
                                </div>
                                <!-- Password -->
                                <div class="md-form {{#if validationErrors.password}}has-error{{/if}}">
                                    <input type="password" id="materialRegisterFormPassword" class="form-control"
                                        aria-describedby="materialRegisterFormPasswordHelpBlock" name="password" value="{{formData.password}}">
                                    <label for="materialRegisterFormPassword">Password</label>
                                    <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                                        At least 8 characters and 1 digit
                                    </small>
                                </div>
                                <!-- Phone number -->
                                <div class="md-form form-actions">
                                    <input type="password" id="materialRegisterFormPhone" class="form-control"
                                        aria-describedby="materialRegisterFormPhoneHelpBlock" value="{{formData.phone}}"
                                        name="phone">
                                    <label for="materialRegisterFormPhone">Phone number (optional)</label>
                                </div>
                                <!-- Sign up button -->
                                <button class="btn btn-outline-red darken-4 btn-block my-4 waves-effect z-depth-0" type="submit">Sign
                                    Up</button>
                                <hr>
                                <!-- Terms of service -->
                                <p>By clicking
                                    <em>Sign Up</em> you agree to our
                                    <a href="" target="_blank">terms of service</a></p>

                            </form>
                            <!-- Form -->
                            {{/if}}
                        </div>

                    </div>
                    <!-- Material form register -->
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>
<!-- Full Page Intro -->

