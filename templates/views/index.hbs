<div id="best">
    <div class="container">
        <!-- Section: Products v.4 -->
        <section class="text-center py-5">

            <!-- Section heading -->
            <a href="/products">
                <h3 class="font-weight-bold text-left grey-text">OUR STORE <i class="fa fa-chevron-right" aria-hidden="true"></i></h3>
            </a>
            <hr>

            <!-- Grid row -->
            <div class="row">
                {{# each data.products.results}}
                <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">

                    <!-- Collection card -->
                    <div class="card collection-card z-depth-1-half">
                        <!-- Card image -->
                        <div class="view zoom">
                            <img src="{{{cloudinaryUrl image crop='fit'}}}" class="img-fluid" alt="">
                            <div class="stripe dark">
                                <a href="{{productUrl slug}}">
                                    <p>{{{title}}}
                                        <i class="fa fa-angle-right"></i>
                                    </p>
                                </a>
                            </div>
                        </div>
                        <!-- Card image -->
                    </div>
                    <!-- Collection card -->

                </div>
                <!-- Grid column -->
                {{/each}}
            </div>
            <!-- Grid row -->

        </section>
        <!-- Section: Products v.4 -->
    </div>
</div>
